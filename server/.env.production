# Centrika Neobank - Production Environment Configuration
# This file contains production-specific environment variables

NODE_ENV=production
PORT=8000

# Database Configuration
# DATABASE_URL will be provided by the deployment environment

# Security Configuration
JWT_SECRET=your-production-jwt-secret-here
JWT_EXPIRES_IN=24h

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# External Services
# Firebase configuration for push notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id

# AWS Configuration for KYC and file storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=centrika-documents

# MoMo API Configuration
MOMO_API_KEY=your-momo-api-key
MOMO_API_SECRET=your-momo-api-secret
MOMO_CALLBACK_URL=https://your-domain.com/api/momo/callback

# Logging
LOG_LEVEL=info