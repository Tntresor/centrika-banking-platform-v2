{
  "version": 2,
  "name": "centrika-neobank-api",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/index.js": {
      "maxDuration": 60
    }
  },
  "installCommand": "cd server && npm install --legacy-peer-deps"
}