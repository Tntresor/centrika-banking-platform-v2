{
  "version": 2,
  "name": "centrika-banking-api",
  "builds": [
    {
      "src": "deploy-server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/deploy-server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "deploy-server.js": {
      "maxDuration": 60
    }
  }
}